[user]
    name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
    email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
    co = checkout
    st = status
    br = branch
    ci = commit
    w = whatchanged
    df = diff
    unstage = reset HEAD
    show-graph = log --graph --abbrev-commit --pretty=oneline
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
[core]
    excludesfile = <%= ENV['HOME'] %>/.gitignore
    editor = vim
    autocrlf = input
    pager = less -FRSX
    autocrlf = input
[apply]
    whitespace = nowarn
[format]
    pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[difftool "Kaleidoscope"]
    cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
    prompt = false
[diff]
    tool = Kaleidoscope
[github]
    user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
    token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
